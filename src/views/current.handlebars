<div style="min-height: 100vh;" class="d-flex flex-column">
  <nav class="navDeco navbar px-2">
    <a class="navbar-brand px-4 title-style" href="#">Claire</a>
    <span
      class="nav-left-items navbar-text d-flex flex-column flex-lg-row align-items-lg-center gap-2"
    >
      <span class="admin-style">User: {{user.name}}</span>
      {{#if user.email}}
        <span class="">Email: {{user.email}}</span>
      {{/if}}
      <a href="/api/sessions/logout" class="px-lg-2"><button
          class="btn btn-signOut-style"
        >Sign Out</button></a>
    </span>
  </nav>
  <main class="container flex-grow-1 mt-4">
    <div
      id="productListContainer"
      class="container-lg d-flex flex-wrap justify-content-center gap-4"
    ></div>
  </main>
  <footer class="footerStyle text-black py-4">
    <div class="container">
      <nav class="row">
        <p
          class="col-12 col-lg-3 text-reset text-uppercase d-flex justify-content-center justify-content-lg-start"
        >
          CLAIRE
        </p>
        <ul
          class="col-lg-9 col-sm-12 list-unstyled d-flex justify-content-center justify-content-lg-end"
        >
          <li class="font-weight-bold text-uppercase"></li>
          <li class="d-flex justify-content-between">
            <p href="https://www.facebook.com/" class="fs-5 m-2">
              <u>
                <BsFacebook />
                /CLAIRE
              </u>
            </p>
            <p href="https://www.instagram.com/" class="fs-5 m-2">
              <u>
                <BsInstagram />
                /CLAIRE
              </u>
            </p>
            <p href="https://web.whatsapp.com/" class="fs-5 m-2">
              <u>
                <ImWhatsapp />
                099741112
              </u>
            </p>
          </li>
        </ul>
        <hr class="lineaHr" />
        <p class="text-center fs-5">
          &copy; 2022 All Rights Reserved &reg; Claire & Co.
        </p>
      </nav>
    </div>
  </footer>
  <!-- Modal -->
  <div
    class="modal fade"
    id="product-detail-modal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Product Detail</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body d-flex flex-column align-items-center">
          <img
            id="det-prod-img"
            class="detail-image"
            src=""
            alt="product detail image"
          />
          <div
            class="d-flex flex-grow-1 flex-column justify-content-end w-100 m-2 align-items-center"
          >
            <p id="det-prod-name" class="text-center"></p>
            <p id="det-prod-desc" class="text-center"></p>
            <p id="det-prod-price" class="text-center"></p>
            <p id="det-prod-stock" class="text-center"></p>
            <p id="det-prod-code"></p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Add to Cart</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script defer src="js/current.js"></script>